{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Go Server",
      "type": "shell",
      "command": "go run main.go",
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev-servers"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Run Next.js Dev",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/app"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev-servers"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Run All Dev Servers",
      "dependsOn": [
        "Run Go Server",
        "Run Next.js Dev"
      ],
      "runOptions": {
        "runOn": "folderOpen"
      },
      "problemMatcher": []
    }
  ]
}
